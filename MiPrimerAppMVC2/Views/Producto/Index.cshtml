@model IEnumerable<MiPrimerAppMVC2.Models.Producto>;

@{
    ViewData["Title"] = "Productos";

}

<p>

    <a asp-action="Create">Agregar Producto</a>
</p>




<div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.FechaDeAlta)
                </th>


                <th>

                </th>



            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => producto.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Activo)</td>
                    <td>@Html.DisplayFor(modelItem => producto.FechaDeAlta)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@producto.Id">Editar</a>
                        <a asp-action="Delete" asp-route-id="@producto.Id">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


<p>Esta Vista Index es del Controlador Producto</p>



@* DisplayFor se utiliza para mostrar el valor de una propiedad del modelo en la vista.  *@